# inspired by https://github.com/aferrero2707/appimage-testsuite
FROM archlinux
RUN pacman --noconfirm -Sy archlinux-keyring
RUN pacman-key --init
RUN pacman-key --populate
RUN pacman --noconfirm -Syu \
    fontconfig \
    freetype2 \
    harfbuzz \
    jack2\
    libglvnd \
    libx11 \
    xorg-server-xvfb

