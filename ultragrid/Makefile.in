clean:
	-rm -f $(OBJS) $(HEADERS) src/main.o $(TARGET) src/version.h 
	-rm -f $(TEST_OBJS) test/run_tests
	-rm -f ag_plugin/uvReceiverService.zip ag_plugin/uvSenderService.zip
