	-rm -rf $(PERF) src/uv_perf.o
	-rm -rf @LIB_OBJS@ @LIB_TARGETS@ @LIB_HEADERS@

distclean: clean
	-rm -f Makefile config.status config.cache config.log src/config.h tags

etags:
	etags src/*.[ch] src/*/*.[ch]

ctags:
	ctags src/*.[ch] src/*/*.[ch]

