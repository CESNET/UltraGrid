.SUFFIXES: .cu

# Pattern rule for compiling CUDA files
%.cu.o: %.cu $(ALL_INCLUDES)
	$(MKDIR_P) $(dir $@)
	"$(CUDA_COMPILER)" $(CUDA_FLAGS) $(INC) -c $< -o $@
%.cu.lib: %.cu $(ALL_INCLUDES)
	$(MKDIR_P) $(dir $@)
	"$(CUDA_COMPILER)" $(CUDA_FLAGS) -DEXPORT_DLL_SYMBOLS $(INC) --shared $< -o $<.dll

