	printf "\"#define GL_legacy 1\\\n\"\n" >> $@
	printf "\"#define FORMAT_YUV 1\\\n\"\n" >> $@
	cat  dxt_compress/compress_dxt1_fp.glsl | sed 's/\(.*\)/    \"\1\\n\"/' >> $@
	echo ";" >> $@
	# Write fp_compress_dxt5ycocg
